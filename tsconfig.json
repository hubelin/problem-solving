{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "build",
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "noEmitOnError": false,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es6"]
  },
  "exclude": ["node_modules"]
}
